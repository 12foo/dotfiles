[general]
# A folder where vdirsyncer can store some metadata about each pair.
status_path = ~/.config/vdirsyncer/status/

# CALDAV
[pair owncloud]
a = owncloud_local
b = owncloud_remote
collections = ["personal", "unicerima", "pontyprit"]

# Calendars also have a color property
metadata = ["displayname", "color"]

[storage owncloud_local]
type = filesystem
path = ~/.calendars/
fileext = .ics

[storage owncloud_remote]
type = caldav
verify = false
verify_fingerprint = 4D:6C:98:06:BD:19:2C:46:A9:2E:CD:34:52:28:79:6B:DA:4B:06:F6
url = https://owncloud.teamalbin.de/remote.php/caldav/
username = philipp
password.fetch = ["prompt", "owncloud password"]
